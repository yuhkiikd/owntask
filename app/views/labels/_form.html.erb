<div class="container">
  <%= form_with(model: @label, local: true) do |f| %>
    <% if @label.errors.any? %>
      <div id="error_explanation">
        <h2><%= @label.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @label.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="label_type">
      <%= f.label :label_type %>
      <%= f.text_field :label_type %>
    </div>
    <%= f.submit %>
  <% end %>
</div>